<h3>It's your post, so make it personal. </h3>

<% if @post.errors.any? %>
	<div class = "alert alert=error">
		<%= post.errors.each do |err| %>
			<%= err %> <br>
		<% end %>
	</div>
<% end %>



<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :body %>
	<%= f.text_area :body, rows: 5 %>
	<br>
	<%= f.label "Associated URL:" %>
	<%= f.url_field :url %>
	<br>
	<%= f.label "User" %>
	<%= collection_select(:post, :user_id, @users, :id, :name) %>
	<br>
	<%= f.submit class: "btn btn-primary" %>
<% end %>